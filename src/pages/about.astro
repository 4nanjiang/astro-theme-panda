---
import MDI18nLayout from '@layouts/MDI18nLayout.astro'
import { useLocale } from '@utils/locale'
const { t } = useLocale(Astro.url)
const posts = await import.meta.glob('../content/about/*.md', { eager: true })
---
<MDI18nLayout title={t('nav.recent')} slug="about" posts={Object.values(posts)} />
